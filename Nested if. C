#include <stdio.h>
int main() {
    int n;
    printf("Enter the number of rows: ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) { // Outer loop controls rows
        for (int j = 1; j <= i; j++) { // Inner loop controls columns
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
