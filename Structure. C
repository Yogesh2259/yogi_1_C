#include <stdio.h>
struct Student {
    char name[50];
    int roll;
    float marks;
};
int main() {
    struct Student s1;
    printf("Enter name: ");
    scanf("%s", s1.name); // Corrected "sl.name" to "s1.name"
    printf("Enter roll number: ");
    scanf("%d", &s1.roll);
    printf("Enter marks: ");
    scanf("%f", &s1.marks);
    printf("\nStudent Details:\n");
    printf("Name: %s\nRoll: %d\nMarks: %.2f\n", s1.name, s1.roll, s1.marks); // Corrected "sl.roll" and "sl.marks" to "s1.roll" and "s1.marks"
    return 0;
}
